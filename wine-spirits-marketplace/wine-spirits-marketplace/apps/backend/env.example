# Application Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Database Configuration - PostgreSQL (Primary OLTP)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_NAME=wine_marketplace

# ClickHouse Configuration (Analytics OLAP)
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_USERNAME=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_DATABASE=wine_analytics

# Elasticsearch Configuration (Search & Discovery)
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=changeme

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Stripe Connect (Split Payment Compliance)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_CONNECT_CLIENT_ID=ca_your_connect_client_id

# Age Verification API (Compliance - 21+ Verification)
PERSONA_API_KEY=persona_sandbox_your_persona_api_key
PERSONA_TEMPLATE_ID=itmpl_your_persona_template_id
PERSONA_ENVIRONMENT=sandbox

# Shipping Carrier APIs (Adult Signature 21+)
UPS_ACCESS_LICENSE_NUMBER=your_ups_access_license
UPS_USER_ID=your_ups_user_id
UPS_PASSWORD=your_ups_password

FEDEX_KEY=your_fedex_key
FEDEX_PASSWORD=your_fedex_password
FEDEX_ACCOUNT_NUMBER=your_fedex_account_number
FEDEX_METER_NUMBER=your_fedex_meter_number

# License Verification APIs
TTB_API_KEY=your_ttb_api_key
STATE_LICENSE_API_KEY=your_state_license_api_key

# Data Feed APIs (Market Data)
LIVEX_API_KEY=your_livex_api_key
WINE_SEARCHER_API_KEY=your_wine_searcher_api_key

# Compliance Monitoring
COMPLIANCE_MODE=ttb_circular_2023_1
CA_ABC_REPORTING=enabled
AUDIT_LOGGING=enabled

# File Upload
MAX_FILE_SIZE=10MB
UPLOAD_DEST=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100 